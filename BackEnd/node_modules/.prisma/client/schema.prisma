generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id         Int         @id @default(autoincrement())
  email      String      @unique
  password   String
  profiles   Profile[]
  committees Committee[] @relation("UserCommittees")
}

model Committee {
  id             Int       @id @default(autoincrement())
  name           String    @unique
  topic          String?
  conference     String?
  code           String
  memberCount    Int       @default(0)
  totalUnmodTime Int       @default(600)
  unmodTime      Int       @default(600)
  countries      Country[]
  users          User[]    @relation("UserCommittees")
  profiles       Profile[]
  Motion         Motion[]
  Caucus         Caucus[]
}

model Country {
  id          Int        @id @default(autoincrement())
  country     String
  code        String
  committee   Committee? @relation(fields: [committeeId], references: [id])
  committeeId Int?
}

model Profile {
  id           Int       @id @default(autoincrement())
  user         User?     @relation(fields: [userId], references: [id])
  role         Role      @default(user)
  committee    Committee @relation(fields: [committeeId], references: [id])
  userId       Int?
  country      String?
  countryCode  String?
  committeeId  Int
  workingPaper String?
  timesSpoken  Int       @default(0)
  present      Boolean   @default(false)
  voting       Boolean   @default(false)
  Motion       Motion[]
  Caucus       Caucus?   @relation(fields: [caucusId], references: [id])
  caucusId     Int?
}

model Motion {
  id           Int        @id @default(autoincrement())
  profile      Profile?   @relation(fields: [profileId], references: [id])
  profileId    Int?
  text         String?
  code         String?
  motionType   MotionType @default(open_unmoderated_caucus)
  time         Int        @default(600)
  speakingTime Int?       @default(60)
  committee    Committee  @relation(fields: [committeeId], references: [id])
  committeeId  Int
  country      String?
}

model Caucus {
  id           Int        @id @default(autoincrement())
  profile      Profile[]
  text         String?
  code         String?
  motionType   MotionType @default(open_unmoderated_caucus)
  totalTime    Int        @default(600)
  time         Int        @default(600)
  speakingTime Int        @default(60)
  committee    Committee  @relation(fields: [committeeId], references: [id])
  committeeId  Int
  country      String?
}

enum Role {
  user
  admin
  viewer
}

enum MotionType {
  open_moderated_caucus
  open_unmoderated_caucus
  extend_moderated_caucus
  extend_unmoderated_caucus
  open_debate
  close_debate
  order_draft_resolutions
  primary_speakers_list
  secondary_speakers_list
}
